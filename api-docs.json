{
    "openapi": "3.0.2",
    "info": {
        "title": "Laravel",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http:\/\/localhost"
        }
    ],
    "paths": {
        "\/api\/news": {
            "get": {
                "summary": "Display a listing of the resource.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/News"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PaginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PaginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/news\/{news}": {
            "get": {
                "summary": "Display the specified resource.",
                "parameters": [
                    {
                        "name": "news",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "": {
                                            "$ref": "#\/components\/schemas\/News"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/pages": {
            "get": {
                "tags": [
                    "pages"
                ],
                "summary": "Display a listing of the resource.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Page"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PaginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PaginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/pages\/{page}": {
            "get": {
                "tags": [
                    "pages"
                ],
                "summary": "Display the specified resource.",
                "parameters": [
                    {
                        "name": "page",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/Page"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/appeals": {
            "post": {
                "tags": [
                    "appeals"
                ],
                "summary": "Sending appeals to the db.",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 100
                        },
                        "example": "User"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Phone",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "88005553535"
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "User@gmail.com"
                    },
                    {
                        "name": "message",
                        "in": "query",
                        "description": "Message",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 1000
                        },
                        "example": "Message"
                    }
                ],
                "responses": {
                    "422": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    },
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PaginatorMeta": {
                "type": "object",
                "properties": {
                    "current_page": {
                        "type": "integer"
                    },
                    "from": {
                        "type": "integer"
                    },
                    "last_page": {
                        "type": "integer"
                    },
                    "path": {
                        "type": "string"
                    },
                    "per_page": {
                        "type": "integer"
                    },
                    "to": {
                        "type": "integer"
                    },
                    "total": {
                        "type": "integer"
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "nullable": true
                                },
                                "label": {
                                    "type": "string"
                                },
                                "active": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            },
            "News": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "published_at": {
                        "format": "date-time",
                        "type": "string"
                    }
                }
            },
            "PaginatorLinks": {
                "type": "object",
                "properties": {
                    "first": {
                        "type": "string"
                    },
                    "last": {
                        "type": "string"
                    },
                    "prev": {
                        "type": "string",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "Page": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    }
                }
            }
        },
        "responses": {
            "ErrorValidation": {
                "description": "Validation errors",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "array",
                            "example": {
                                "name": [
                                    "Something is wrong with this field!"
                                ]
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "news",
            "description": "News"
        }
    ]
}
