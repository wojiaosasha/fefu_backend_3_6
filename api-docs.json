{
    "openapi": "3.0.2",
    "info": {
        "title": "Laravel",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http:\/\/localhost"
        }
    ],
    "paths": {
        "\/api\/user": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "output user data",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "\/api\/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "login user",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "test@test.com"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "123456"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#\/components\/responses\/User Token"
                    },
                    "422": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "\/api\/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "register user",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "shrek"
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "test@test.com"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "123456"
                    }
                ],
                "responses": {
                    "422": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    },
                    "200": {
                        "$ref": "#\/components\/responses\/User Token"
                    }
                }
            }
        },
        "\/api\/logout": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "logout user",
                "responses": {
                    "200": {
                        "description": "logout success"
                    }
                }
            }
        },
        "\/api\/appeals": {
            "post": {
                "tags": [
                    "appeals"
                ],
                "summary": "Sending appeals to the db.",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 100
                        },
                        "example": "User"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Phone",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "88005553535"
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Email",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "User@gmail.com"
                    },
                    {
                        "name": "message",
                        "in": "query",
                        "description": "Message",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 1000
                        },
                        "example": "Message"
                    }
                ],
                "responses": {
                    "422": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    },
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "\/api\/news": {
            "get": {
                "tags": [
                    "news"
                ],
                "summary": "Display a listing of the resource.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/News"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PoginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PoginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/news\/{news}": {
            "get": {
                "tags": [
                    "news"
                ],
                "summary": "Display the specified resource.",
                "parameters": [
                    {
                        "name": "news",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/News"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/pages": {
            "get": {
                "tags": [
                    "pages"
                ],
                "summary": "Display a listing of the resource.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Page"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PoginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PoginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/pages\/{page}": {
            "get": {
                "tags": [
                    "pages"
                ],
                "summary": "Display the specified resource.",
                "parameters": [
                    {
                        "name": "page",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/Page"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/categories": {
            "get": {
                "tags": [
                    "categories"
                ],
                "summary": "Display categories.",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Categories"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/categories\/{category}": {
            "get": {
                "tags": [
                    "categories"
                ],
                "summary": "Display Categories through slug.",
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/Categories"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/catalog\/product\/list": {
            "get": {
                "tags": [
                    "products"
                ],
                "summary": "Display all products category.",
                "parameters": [
                    {
                        "name": "category_slug",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/ShortInfoProduct"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PoginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PoginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/catalog\/product\/details": {
            "get": {
                "tags": [
                    "products"
                ],
                "summary": "Display product by slug.",
                "parameters": [
                    {
                        "name": "product_slug",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/FullInfoProduct"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Categories": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "parent_id": {
                        "type": "string"
                    }
                }
            },
            "FullInfoProduct": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    },
                    "category": {
                        "$ref": "#\/components\/schemas\/Categories"
                    },
                    "attributes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "News": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "published_at": {
                        "format": "date-time",
                        "type": "string"
                    }
                }
            },
            "Page": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    }
                }
            },
            "PoginatorLinks": {
                "type": "object",
                "properties": {
                    "first": {
                        "type": "string"
                    },
                    "last": {
                        "type": "string"
                    },
                    "prev": {
                        "type": "string",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "PoginatorMeta": {
                "type": "object",
                "properties": {
                    "current_page": {
                        "type": "integer"
                    },
                    "from": {
                        "type": "integer"
                    },
                    "last_page": {
                        "type": "integer"
                    },
                    "path": {
                        "type": "string"
                    },
                    "per_page": {
                        "type": "integer"
                    },
                    "to": {
                        "type": "integer"
                    },
                    "total": {
                        "type": "integer"
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "nullable": true
                                },
                                "label": {
                                    "type": "string"
                                },
                                "active": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "ShortInfoProduct": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        },
        "responses": {
            "User Token": {
                "description": "User Token",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "example": {
                                "token": "token_string"
                            }
                        }
                    }
                }
            },
            "ErrorValidation": {
                "description": "Validation errors",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "array",
                            "example": {
                                "name": [
                                    "Something is wrong with this field!"
                                ]
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "news",
            "description": "News"
        },
        {
            "name": "pages",
